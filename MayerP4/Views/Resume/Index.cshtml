@model MayerP4.Models.ResumeViewModel
@using MayerP4.Controllers

@{
    ViewData["Title"] = "Resume";
}

<h2>Resume</h2>

<div class="jumbotron">
    <h4>@Html.DisplayFor(model => model.Intro)</h4>
</div>
<div class="row">
    <div class="col-md-12">
        <h1>Skills</h1>
        @if (User.IsInRole("admin"))
        {
            @Html.ActionLink("Edit", "Index", "Skills")
        }
        <ul>
            @foreach (var skill in Model.Skills)
            {
                <li>
                    <b>@skill.Title:</b> @skill.Description
                    <hr />
                </li>
            }
        </ul>
    </div>
    <div class="col-md-12">

        <h1>Experience</h1>
        @if (User.IsInRole("admin"))
        {
            @Html.ActionLink("Edit", "Index", "Experiences")
        }

        <ul>
            @foreach (var experience in Model.Experiences)
            {
                <li>
                    <p>@experience.Title: @experience.Description </p>
                </li>

            }
        </ul>
    </div>
    <div class="col-md-12">
        <h1>Education</h1>
        @if (User.IsInRole("admin"))
        {
            @Html.ActionLink("Edit", "Index", "Educations")
        }
        <ul>
            @foreach (var education in Model.Educations)
            {
                <li>
                    <p>@education.School </p>
                    <p>@education.Degree </p>
                    <p> @education.Start.ToShortDateString()  - @education.End.ToShortDateString() </p>
                </li>
            }
        </ul>
    </div>
    <div class="col-md-12">
    </div>
</div>
